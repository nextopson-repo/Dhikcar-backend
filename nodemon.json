{
  "watch": ["src"],
  "ext": ".ts,.js",
  "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts", "dist/**/*"],
  "exec": "tsx src/index.ts",
  "events": {
    "restart": "echo '[nodemon] App restarted due to changes'",
    "crash": "echo '[nodemon] App crashed - attempting restart...'",
    "start": "echo '[nodemon] App starting...'",
    "quit": "echo '[nodemon] App quit'"
  },
  "delay": "1000",
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  },
  "legacyWatch": false,
  "polling": false,
  "restartable": "rs",
  "colours": true,
  "crash": true,
  "exitcrash": false,
  "maxRestarts": 10,
  "restartDelay": 1000,
  "spawn": true,
  "signal": "SIGUSR2"
} 