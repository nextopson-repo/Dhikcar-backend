# Environment Configuration
NODE_ENV=production
HOST=0.0.0.0
PORT=10000

# Database Configuration (Railway/Production)
RAILWAY_DB_HOST=your-database-host
RAILWAY_DB_USERNAME=your-database-username
RAILWAY_DB_PASSWORD=your-database-password
RAILWAY_DB_NAME=your-database-name

# Local Database Configuration (Development)
LOCAL_DB_HOST=localhost
LOCAL_DB_USERNAME=root
LOCAL_DB_PASSWORD=password
LOCAL_DB_NAME=nextdeal

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# JWT Configuration
ACCESS_SECRET_KEY=your-super-secret-jwt-access-key
REFRESH_SECRET_KEY=your-super-secret-jwt-refresh-key

# Razorpay Configuration
RAZORPAY_TEST_KEY_ID=your-razorpay-key-id
RAZORPAY_TEST_KEY_SECRET=your-razorpay-key-secret

# SMTP Configuration (Email Service)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=your-email@domain.com

# MSG91 Configuration (SMS Service)
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=your-sender-id
MSG91_ROUTE=4
MSG91_TEMPLATE_ID=your-template-id

# DVHosting Configuration
DVHOSTING_API_KEY=your-dvhosting-api-key

# Twilio Configuration
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-frontend-domain.com/auth/google/callback

# Apple OAuth Configuration
APPLE_CLIENT_ID=com.yourcompany.app
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# Rate Limiting
COMMON_RATE_LIMIT_MAX_REQUESTS=1000
COMMON_RATE_LIMIT_WINDOW_MS=1000
